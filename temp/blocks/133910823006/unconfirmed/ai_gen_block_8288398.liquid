{% doc %}
  @prompt
    A heading with an animated glowing effect

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .glowing-heading-{{ ai_gen_id }} {
    position: relative;
    text-align: {{ block.settings.text_alignment }};
    margin: {{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom }}px;
    padding: {{ block.settings.padding }}px;
  }

  .glowing-heading-{{ ai_gen_id }} h2 {
    display: inline-block;
    position: relative;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    line-height: 1.2;
    z-index: 1;
  }

  .glowing-heading-{{ ai_gen_id }} h2::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: {{ block.settings.glow_color }};
    filter: blur({{ block.settings.glow_blur }}px);
    opacity: 0;
    z-index: -1;
    animation: glow-{{ ai_gen_id }} {{ block.settings.animation_speed }}s ease-in-out infinite alternate;
  }

  @keyframes glow-{{ ai_gen_id }} {
    0% {
      opacity: {{ block.settings.glow_min_opacity | divided_by: 100.0 }};
      transform: scale(0.95);
    }
    100% {
      opacity: {{ block.settings.glow_max_opacity | divided_by: 100.0 }};
      transform: scale(1.05);
    }
  }

  @media screen and (max-width: 749px) {
    .glowing-heading-{{ ai_gen_id }} h2 {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="glowing-heading-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <h2>{{ block.settings.heading }}</h2>
</div>

