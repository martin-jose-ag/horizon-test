{% doc %}
  @prompt
    A magazine-style editorial layout

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .editorial-layout-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns }}, 1fr);
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    max-width: 100%;
    margin: 0 auto;
  }

  @media screen and (max-width: 749px) {
    .editorial-layout-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.gap | divided_by: 2 }}px;
      padding: {{ block.settings.padding | divided_by: 2 }}px;
    }
  }

  .editorial-layout__main-{{ ai_gen_id }} {
    grid-column: span {{ block.settings.main_column_span }};
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_spacing }}px;
  }

  @media screen and (max-width: 749px) {
    .editorial-layout__main-{{ ai_gen_id }} {
      grid-column: 1 / -1;
    }
  }

  .editorial-layout__sidebar-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_spacing }}px;
  }

  .editorial-layout__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    margin-bottom: {{ block.settings.image_spacing }}px;
  }

  .editorial-layout__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .editorial-layout__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .editorial-layout__image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.5;
  }

  .editorial-layout__caption-{{ ai_gen_id }} {
    font-size: 14px;
    font-style: italic;
    color: {{ block.settings.caption_color }};
    margin-top: 8px;
  }

  .editorial-layout__eyebrow-{{ ai_gen_id }} {
    font-size: {{ block.settings.eyebrow_size }}px;
    font-weight: 500;
    text-transform: {{ block.settings.eyebrow_transform }};
    letter-spacing: 0.05em;
    color: {{ block.settings.eyebrow_color }};
    margin-bottom: 8px;
  }

  .editorial-layout__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    line-height: 1.2;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin-bottom: {{ block.settings.title_spacing }}px;
  }

  @media screen and (max-width: 749px) {
    .editorial-layout__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }
  }

  .editorial-layout__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    line-height: 1.4;
    font-weight: {{ block.settings.subtitle_weight }};
    color: {{ block.settings.subtitle_color }};
    margin-bottom: {{ block.settings.subtitle_spacing }}px;
  }

  .editorial-layout__content-{{ ai_gen_id }} {
    font-size: {{ block.settings.body_size }}px;
    line-height: {{ block.settings.body_line_height }};
    color: {{ block.settings.body_color }};
  }

  .editorial-layout__content-{{ ai_gen_id }} p {
    margin-bottom: 1em;
  }

  .editorial-layout__content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .editorial-layout__sidebar-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.sidebar_title_size }}px;
    font-weight: {{ block.settings.sidebar_title_weight }};
    color: {{ block.settings.sidebar_title_color }};
    margin-bottom: 16px;
    border-bottom: 1px solid {{ block.settings.divider_color }};
    padding-bottom: 8px;
  }

  .editorial-layout__sidebar-content-{{ ai_gen_id }} {
    font-size: {{ block.settings.sidebar_text_size }}px;
    line-height: 1.5;
    color: {{ block.settings.sidebar_text_color }};
  }

  .editorial-layout__pullquote-{{ ai_gen_id }} {
    font-size: {{ block.settings.pullquote_size }}px;
    line-height: 1.3;
    font-weight: {{ block.settings.pullquote_weight }};
    font-style: italic;
    color: {{ block.settings.pullquote_color }};
    padding: {{ block.settings.pullquote_padding }}px;
    border-left: 4px solid {{ block.settings.pullquote_accent_color }};
    margin: {{ block.settings.content_spacing }}px 0;
  }

  .editorial-layout__meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: {{ block.settings.meta_color }};
    margin-bottom: 16px;
  }

  .editorial-layout__divider-{{ ai_gen_id }} {
    height: 1px;
    background-color: {{ block.settings.divider_color }};
    margin: {{ block.settings.content_spacing }}px 0;
    opacity: 0.6;
  }

  .editorial-layout__author-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-top: {{ block.settings.content_spacing }}px;
  }

  .editorial-layout__author-image-{{ ai_gen_id }} {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    overflow: hidden;
  }

  .editorial-layout__author-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .editorial-layout__author-placeholder-{{ ai_gen_id }} {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .editorial-layout__author-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .editorial-layout__author-info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
  }

  .editorial-layout__author-name-{{ ai_gen_id }} {
    font-weight: 600;
    color: {{ block.settings.author_name_color }};
  }

  .editorial-layout__author-bio-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.author_bio_color }};
  }
{% endstyle %}

<div class="editorial-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="editorial-layout__main-{{ ai_gen_id }}">
    {% if block.settings.show_eyebrow and block.settings.eyebrow_text != blank %}
      <div class="editorial-layout__eyebrow-{{ ai_gen_id }}">{{ block.settings.eyebrow_text }}</div>
    {% endif %}

    {% if block.settings.title != blank %}
      <h2 class="editorial-layout__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}

    {% if block.settings.show_meta %}
      <div class="editorial-layout__meta-{{ ai_gen_id }}">
        {% if block.settings.publication_date != blank %}
          <span>{{ block.settings.publication_date }}</span>
        {% endif %}
        {% if block.settings.reading_time != blank %}
          <span>â€¢</span>
          <span>{{ block.settings.reading_time }} min read</span>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.subtitle != blank %}
      <div class="editorial-layout__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
    {% endif %}

    {% if block.settings.main_image %}
      <div class="editorial-layout__image-wrapper-{{ ai_gen_id }}">
        <img 
          src="{{ block.settings.main_image | image_url: width: 1500 }}"
          alt="{{ block.settings.main_image.alt | escape }}"
          loading="lazy"
          class="editorial-layout__image-{{ ai_gen_id }}"
          width="{{ block.settings.main_image.width }}"
          height="{{ block.settings.main_image.height }}"
        >
        {% if block.settings.image_caption != blank %}
          <div class="editorial-layout__caption-{{ ai_gen_id }}">{{ block.settings.image_caption }}</div>
        {% endif %}
      </div>
    {% else %}
      <div class="editorial-layout__image-wrapper-{{ ai_gen_id }}">
        <div class="editorial-layout__image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
        {% if block.settings.image_caption != blank %}
          <div class="editorial-layout__caption-{{ ai_gen_id }}">{{ block.settings.image_caption }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.content != blank %}
      <div class="editorial-layout__content-{{ ai_gen_id }}">
        {{ block.settings.content }}
      </div>
    {% endif %}

    {% if block.settings.show_pullquote and block.settings.pullquote != blank %}
      <blockquote class="editorial-layout__pullquote-{{ ai_gen_id }}">
        {{ block.settings.pullquote }}
      </blockquote>
    {% endif %}

    {% if block.settings.show_author %}
      <div class="editorial-layout__divider-{{ ai_gen_id }}"></div>
      <div class="editorial-layout__author-{{ ai_gen_id }}">
        {% if block.settings.author_image %}
          <div class="editorial-layout__author-image-{{ ai_gen_id }}">
            <img 
              src="{{ block.settings.author_image | image_url: width: 100 }}"
              alt="{{ block.settings.author_name }}"
              loading="lazy"
              width="50"
              height="50"
            >
          </div>
        {% else %}
          <div class="editorial-layout__author-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
        <div class="editorial-layout__author-info-{{ ai_gen_id }}">
          {% if block.settings.author_name != blank %}
            <div class="editorial-layout__author-name-{{ ai_gen_id }}">{{ block.settings.author_name }}</div>
          {% endif %}
          {% if block.settings.author_bio != blank %}
            <div class="editorial-layout__author-bio-{{ ai_gen_id }}">{{ block.settings.author_bio }}</div>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_sidebar %}
    <div class="editorial-layout__sidebar-{{ ai_gen_id }}">
      {% if block.settings.sidebar_title != blank %}
        <h3 class="editorial-layout__sidebar-title-{{ ai_gen_id }}">{{ block.settings.sidebar_title }}</h3>
      {% endif %}
      {% if block.settings.sidebar_content != blank %}
        <div class="editorial-layout__sidebar-content-{{ ai_gen_id }}">
          {{ block.settings.sidebar_content }}
        </div>
      {% endif %}
    </div>
  {% endif %}
</div>

